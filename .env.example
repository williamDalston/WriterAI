# WriterAI Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# LLM API Keys (at least one required)
# ============================================================================

# OpenAI API Key (for GPT-4, GPT-4o, etc.)
OPENAI_API_KEY=sk-your-openai-key-here

# Google API Key (for Gemini models)
GOOGLE_API_KEY=your-google-api-key-here
# Alternative name for Google API
GEMINI_API_KEY=your-gemini-api-key-here

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ============================================================================
# Server Configuration
# ============================================================================

# Server host and port
HOST=0.0.0.0
PORT=8080

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# ============================================================================
# Database & Storage
# ============================================================================

# Redis URL (optional, for caching)
REDIS_URL=redis://localhost:6379

# Data directory (relative to project root)
DATA_DIR=prometheus_novel/data

# ============================================================================
# Generation Settings
# ============================================================================

# Default model for generation
DEFAULT_MODEL=gpt-4o-mini

# Default budget per project (USD)
DEFAULT_BUDGET=100

# Maximum tokens per generation request
MAX_TOKENS=4096

# ============================================================================
# Logging
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (optional)
LOG_FILE=prometheus_novel/logs/writerai.log
